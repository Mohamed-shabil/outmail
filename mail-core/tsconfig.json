{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2020",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
